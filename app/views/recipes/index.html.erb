<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.user_id %></td>
    <td><%= recipe.title %></td>
    <td><%= recipe.story %></td>
    <td><%= recipe.recipe %></td>
    <td><%= recipe.created_on %></td>
    <td><%= recipe.pic_id %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

