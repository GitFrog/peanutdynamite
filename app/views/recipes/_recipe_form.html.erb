<%= form_for(@recipe) do |f| %>

<div id="page1">
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br />
    <%= f.text_area :ingredients %>
  </div>
  <div class="field">
    <%= f.label :course %><br />
    <%= f.text_field :course %>
  </div>
</div>
<div id="page2">
 <div class="field">
    <%= f.label :instructions %><br />
    <%= f.text_area :instructions %>
 </div>
    
  <div class="field">
    <%= f.label "Preparation Time (min)" %><br />
    <%= f.number_field :prepTime %>
  </div>
 <div class="field">
    <%= f.label "Cooking Time (min)" %><br />
    <%= f.number_field :cookTime %>
  </div>
 <div class="field">
    <%= f.label "Yield" %><br />
    <%= f.number_field :yield %>
  </div>
  <div class="actions">
    <%= f.submit "Add Recipe" %>
  </div>
</div>
  
 <% end %>

<% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
